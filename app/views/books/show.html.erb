<<div class="container">
  <div class="row">

  　<div class="col-md-3">
    　<%= render 'users/user', user: @user %>
    　<h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <th><%= image_tag @user.get_profile_image(30,30), fallback: "no_image.jpg" %></th>
          <th><%= link_to @user.name, user_path(@user) %></th>
          <th><%= @book.title %></th>
          <th><%= @book.body %></th>
          <% if @book.user_id == current_user.id %>
            <th><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></th>
            <th><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></th>
          <% end %>
        </tr>
      </table>
    </div>
    
  </div>
</div>

