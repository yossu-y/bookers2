<div class="container">
  <div class="row">

  　<div class="col-md-3">
    　<%= render 'users/user', user: @user %>
    　<h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">

      <table class="table">
        <h1>Book detail</h1>
        <tr>
          <td style="valign: center;"><%= image_tag @user.get_profile_image(25,25), fallback: "no_image.jpg" %></br>
          　　<%= link_to @user.name, user_path(@user) %>
          </td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>



